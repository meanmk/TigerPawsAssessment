@model TigerPaws.Models.Genre

<h2>@Model.Name</h2>

<table class=" table table-bordered table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Genre</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    <img class="img-thumbnail" style="height:40px" src="~/Content/Images/@product.Image" />
                </td>
                <td>
                    @Html.ActionLink(product.Name, "Details", "Products", new { id = product.Id}, null)
                </td>
                <td>
                    @product.Genre.Name
                </td>
            </tr>
        }
         <tr>

          </tr>
        </tbody>             
</table>