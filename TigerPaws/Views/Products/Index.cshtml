@model IEnumerable<TigerPaws.Models.Product>

@{
    ViewBag.Title = "Our Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<button class="btn btn-default">
    @Html.ActionLink("Add Product", "Create", "Products", new { @class = "btn btn-primary" })
</button>

<table id="productTbl" class="table table-bordered table-hover">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="img-thumbnail" style="height:40px" src="~/Content/Images/@item.Image" />
            </td>
            <td>
                @Html.ActionLink(item.Name, "Details", "Products", new { id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <button data-product-id="@item.Id" class="btn btn-link js-delete">Delete</button>
            </td>
        </tr>
}
</table>


@section scripts
{
   <script>
       $(document).ready(function () {
           $("#productTbl").on("click",".js-delete", function () {
               var button = $(this);

               if (confirm("Are you sure you want to delete this product?")) {
                   $.ajax({
                       url: "api/products/" + button.attr("data-product-id"),
                       method: "DELETE",
                       success: function () {
                           button.parents("tr").remove();
                       }
                   });
               }
           });
       });
    </script>
}